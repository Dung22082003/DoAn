@model DoAn.Models.Services
@{
    Layout = "~/Areas/Admin/View/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa dịch vụ</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Sửa dịch vụ</h2>
        </div>
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="All"></div>
            <div class="form-group col-md-6">
                <label asp-for="ServiceID">ServiceID</label>
                <input type="text" class="form-control mb-3" asp-for="ServiceID" placeholder="sửa Service">
                <span asp-validation-for="ServiceID" class=" alert-danger"></span>
            </div>
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label asp-for="Title">Title</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập tên dịch vụ">
                    <span asp-validation-for="Title" class=" alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <div class="form-group col-md-6">
                        <label asp-for="Text">Text</label>
                        <input type="text" class="form-control mb-3" asp-for="Text" placeholder="Nhập yêu cầu">
                        <span asp-validation-for="Text" class=" alert-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Icon">Icon</label>
                        <input type="text" class="form-control mb-3" asp-for="Icon" placeholder="Nhập Icon">
                        <span asp-validation-for="Icon" class=" alert-danger"></span>
                    </div>
                
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2"> Quay lại</a>
        </form>
    </div>
</main>