@model DoAn.Models.Chef
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main int id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm mới nhân viên</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới nhân viên</h2>
        </div>

        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
               
                <div class="form-group col-md-6">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Nhập tên Chef">
                    <span asp-validation-for="Name" class=" alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <div class="form-group col-md-6">
                        <label asp-for="Position">Position</label>
                        <input type="text" class="form-control mb-3" asp-for="Position" placeholder="Nhập chức vụ">
                        <span asp-validation-for="Position" class=" alert-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Image">Image</label>
                        <input type="text" class="form-control mb-3" asp-for="Image" placeholder="Nhập hình ảnh">
                        <span asp-validation-for="Image" class=" alert-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Fb">Fb</label>
                        <input type="text" class="form-control mb-3" asp-for="Fb" placeholder="Nhập liên kết FaceBook">
                        <span asp-validation-for="Fb" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Ing">Ing</label>
                        <input type="text" class="form-control mb-3" asp-for="Ing" placeholder="Nhập liên kết Instagram">
                        <span asp-validation-for="Ing" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Icon">Icon</label>
                        <input type="text" class="form-control mb-3" asp-for="Icon" placeholder="Nhập Icon">
                        <span asp-validation-for="Icon" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Icon_Fb">Icon_Fb</label>
                        <input type="text" class="form-control mb-3" asp-for="Icon_Fb" placeholder="Nhập Icon_Fb">
                        <span asp-validation-for="Icon_Fb" class=" alert-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Icon_Ig">Icon_Ig</label>
                        <input type="text" class="form-control mb-3" asp-for="Icon_Ig" placeholder="Nhập Icon_Ig">
                        <span asp-validation-for="Icon_Ig" class=" alert-danger"></span>
                    </div>
                    <div class="tox-form-group--maximize mt-5 mb-5">
                    </div>
                </div>
            </div>
                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
                <a asp-asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2"> Quay lại</a>
        </form>
    </div>
</main>