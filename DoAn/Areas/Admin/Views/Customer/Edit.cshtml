@model DoAn.Models.Customer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận sửa</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>sửa</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="CustomersId">


                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Tên</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Nhập tên khách hàng">
                    <span asp-validation-for="UserName" class="alert-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label">Bình luận</label>
                    <input type="text" class="form-control" asp-for="Comment" placeholder="Nhập bình luận">
                    <span asp-validation-for="Comment" class="alert-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Position" class="form-label">Chức vụ</label>
                    <input type="text" class="form-control" asp-for="Position" placeholder="Nhập chức vụ">
                    <span asp-validation-for="Position" class="alert-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label">Ảnh đại diện</label>
                    <input type="text" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IconStar">IconStar</label>
                    <input type="text" class="form-control mb-3" asp-for="IconStar">
                    <span asp-validation-for="IconStar" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Iconcomma">Iconcomma</label>
                    <input type="text" class="form-control mb-3" asp-for="Iconcomma">
                    <span asp-validation-for="Iconcomma" class="alert-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary btn-lg me-md-2"><i class="bi bi-file-plus-fill"></i> Lưu</button>
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-warning btn-lg">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
    </div>
</main>