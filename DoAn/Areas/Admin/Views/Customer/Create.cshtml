@model DoAn.Models.Customer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm mới</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới</h2>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="UserName">Tên</label>
                    <input type="text" class="form-control mb-3" asp-for="UserName" placeholder="Nhập tên Member">
                    <span asp-validation-for="UserName" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Comment">Bình luận</label>
                    <input type="text" class="form-control mb-3" asp-for="Comment" placeholder="Nhập bình luận">
                    <span asp-validation-for="Comment" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Position">Chức vụ</label>
                    <input type="text" class="form-control mb-3" asp-for="Position" placeholder="Nhập chức vụ">
                    <span asp-validation-for="Position" class="alert-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Image">Ảnh đại diện</label>
                    <input type="text" class="form-control mb-3" asp-for="Image">
                    <span asp-validation-for="Image" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IconStar">IconStar</label>
                    <input type="text" class="form-control mb-3" asp-for="IconStar">
                    <span asp-validation-for="IconStar" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Iconcomma">Iconcomma</label>
                    <input type="text" class="form-control mb-3" asp-for="Iconcomma">
                    <span asp-validation-for="Iconcomma" class="alert-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>