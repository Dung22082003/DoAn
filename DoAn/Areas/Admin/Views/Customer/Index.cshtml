@using DoAn.Models;
@model IList<Customer>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="page-title">
		<h2>Quản lý Bình luận</h2>
	</div>

	<div class="action-btn">
		<a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Customer" asp-action="Create">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm Bình luận
		</a>
	</div>

	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-body">
						<table class="table table-striped">
							<thead class="thead-dark">
								<tr>
									<th scope="col">ID</th>
									<th scope="col">Tên</th>
									<th scope="col">Bình luận</th>
									<th scope="col">Chức vụ</th>
									<th scope="col">Ảnh đại diện</th>
									<th scope="col">Icon Star</th>
									<th scope="col">Icon Comma</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.CustomersId</td>
										<td>
											<a asp-area="Admin" asp-controller="TeamMembers" asp-action="Details"
											   asp-route-id="@item.CustomersId" class="text-primary">@item.UserName</a>
										</td>
										<td>@item.Comment</td>
										<td>@item.Position</td>
										<td>
											<img src="@item.Image" alt="Image" class="rounded-circle "
												 style="max-width: 50px; max-height: 50px;">
										</td>
										<td>@item.IconStar</td>
										<td>@item.Iconcomma</td>
										<td>
											<div class="btn-group" role="group">
												<a asp-area="Admin" asp-controller="Customer" asp-action="Edit"
												   asp-route-id="@item.CustomersId" class="btn btn-primary btn-sm"
												   title="Sửa nội dung"><i class="bi bi-pencil"></i></a>
												<a asp-area="Admin" asp-controller="Customer" asp-action="Delete"
												   asp-route-id="@item.CustomersId" class="btn btn-danger btn-sm"
												   title="Xóa thông tin"><i class="bi bi-trash"></i></a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>