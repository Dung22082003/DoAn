@using DoAn.Models;
@model IList<Event>
@{
    var typeEvent = ViewBag.typeEvent;
    var test = ViewData["test"];
}
<script>
    console.log(@Html.Raw(Json.Serialize(test)))
</script>
<!-- Events Start -->
<div class="container-fluid event py-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Latest Events</small>
            <h1 class="display-5 mb-5">Our Social & Professional Events Gallery</h1>
        </div>
        <div class="tab-class text-center">
            <ul class="nav nav-pills d-inline-flex justify-content-center mb-5 wow bounceInUp" data-wow-delay="0.1s">
                @for (int i = 0; i < typeEvent.Count; i++)
                {
                    <li class="nav-item p-2">
                        <a class="d-flex mx-2 py-2 border border-primary bg-light rounded-pill @(i == 0 ? "active" : "")" 
                        data-bs-toggle="pill" href="#tab-@typeEvent[i].TypeId">
                            <span class="text-dark" style="width: 150px;">@typeEvent[i].Name</span>
                        </a>
                    </li>
                }
            </ul>
            <div class="tab-content">
                @foreach (var hehe in typeEvent)
                {
                    <div id="tab-@hehe.TypeId" class="tab-pane fade show p-0 @(hehe.TypeId == 1 ? "active" : "" )">
                        <div class="row g-4">   
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    @foreach (var item in Model.Where(m => m.TypeId == hehe.TypeId))
                                    {
                                        <div class="col-md-6 col-lg-3 wow bounceInUp" >
                                            <div class="event-img position-relative">
                                                <img class="img-fluid rounded w-100" src="@item.Images" alt="">
                                                <div class="event-overlay d-flex flex-column p-4">
                                                    <h4 class="me-auto">@item.Title</h4>
                                                    <a href="@item.Images" data-lightbox="event-1" class="my-auto"><i class="@item.Icon"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Events End -->
