@using DoAn.Models;
@model IList<FoodMenu>
@{
    var typeFood = ViewBag.typeFood;
    var test = ViewData["test"];
}
<script>
    console.log(@Html.Raw(Json.Serialize(test)))
</script>


<!-- Menu Start -->
<div class="container-fluid menu bg-light py-6 my-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Our Menu</small>
            <h1 class="display-5 mb-5">Most Popular Food in the World</h1>
        </div>
        <div class="tab-class text-center">
            <ul class="nav nav-pills d-inline-flex justify-content-center mb-5 wow bounceInUp" data-wow-delay="0.1s">
                @for(int h = 0; h < typeFood.Count; h++)
                {
                    <li class="nav-item p-2">
                        <a class="d-flex py-2 mx-2 border border-primary bg-white rounded-pill @(h == 0 ? "active" : "")"
                           data-bs-toggle="pill" href="#tab-@typeFood[h].TypeFoodID">
                            <span class="text-dark" style="width: 150px;">@typeFood[h].Name</span>
                        </a>
                    </li>
                }
            </ul>
            <div class="tab-content">
                @foreach(var fut in typeFood)
                {
                    <div id="tab-@fut.TypeFoodID" class="tab-pane fade show p-0 @(fut.TypeFoodID == 1 ? "active" :"")">
                        <div class="row g-4">
                            @foreach(var item in Model.Where(m => m.TypeFoodID == fut.TypeFoodID))
                            {
                                <div class="col-lg-6 wow bounceInUp" data-wow-delay="0.1s">
                                    <div class="menu-item d-flex align-items-center">
                                        <img class="flex-shrink-0 img-fluid rounded-circle" src="@item.Image" alt="">
                                        <div class="w-100 d-flex flex-column text-start ps-4">
                                            <div class="d-flex justify-content-between border-bottom border-primary pb-2 mb-2">
                                                <h4>@item.Title</h4>
                                                <h4 class="text-primary">@item.Cost</h4>
                                            </div>
                                            <p class="mb-0">@item.Contents</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->